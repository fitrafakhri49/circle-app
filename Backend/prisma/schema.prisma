generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id            Int      @id @default(autoincrement())
  username      String   @unique
  full_name     String
  email         String   @unique
  password      String
  photo_profile String?
  bio           String?
  created_at    DateTime @default(now())
  created_by    Int?
  update_at     DateTime @default(now())
  updated_by    Int?

  createdByUserId users?    @relation("created_by_user", fields: [created_by], references: [id])
  updatedByUserId users?    @relation("updated_by_user", fields: [updated_by], references: [id])
  replies         replies[]
  likes           likes[]

  updated_by_user users[]   @relation("updated_by_user")
  created_by_user users[]   @relation("created_by_user")
  following       follow[]  @relation("UserFollowings")
  followers       follow[]  @relation("UserFollowers")
  user            threads[] @relation("created_by_user")
  userUp          threads[] @relation("updated_by_user")
}

model replies {
  id         Int      @id @default(autoincrement())
  user_id    Int
  thread_id  Int
  image      String?
  content    String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  updatedby  Int?

  thread threads @relation(fields: [thread_id], references: [id])

  user users @relation(fields: [user_id], references: [id])
}

model threads {
  id                Int      @id @default(autoincrement())
  content           String
  image             String?
  number_of_replies Int      @default(0)
  created_at        DateTime @default(now())
  created_by        Int
  updated_at        DateTime @default(now())
  updated_by        Int
  number_of_likes   Int      @default(0)

  user                   users     @relation("created_by_user", fields: [created_by], references: [id])
  updated_by_user_thread users     @relation("updated_by_user", fields: [updated_by], references: [id])
  likes                  likes[]
  replies                replies[]
}

model likes {
  id         Int      @id @default(autoincrement())
  user_id    Int
  thread_id  Int
  created_at DateTime @default(now())
  created_by Int?
  updated_at DateTime @default(now())
  updated_by Int?

  user   users   @relation(fields: [user_id], references: [id])
  thread threads @relation(fields: [thread_id], references: [id])

  @@unique([thread_id, user_id])
}

model follow {
  id           Int      @id @default(autoincrement())
  following_id Int
  followers_id Int
  created_at   DateTime @default(now())
  updated_at   DateTime @default(now())

  following users @relation("UserFollowings", fields: [following_id], references: [id])
  followers users @relation("UserFollowers", fields: [followers_id], references: [id])
}
